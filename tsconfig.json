{
  "compilerOptions": {
    "target": "ES6",            // Compile to modern JavaScript (ES6)
    "module": "ES6",            // Use modern module system
    "strict": true,             // Enable all strict type-checking options
    "outDir": "./dist",         // Output compiled JS to a 'dist' folder
    "sourceMap": true,          // Generate sourcemaps for debugging
    "esModuleInterop": true,    // Allows default imports from commonjs modules
    "lib": ["DOM", "ES2015"]    // Include standard DOM and ES2015 libraries
  },
  "include": [
    "src/**/*"                  // Only compile files in the 'src' directory
  ]
}