{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "outDir": "./public/dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "public/dist", "legacy"]
}
